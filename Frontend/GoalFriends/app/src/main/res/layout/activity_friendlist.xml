<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".activities.FriendsListActivity">

    <ListView
        android:id="@+id/friendListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/friendlistCancelButton"
        android:divider="#3F51B5"
        android:dividerHeight="2dp" />


    <ImageButton
        android:id="@+id/friendlistCancelButton"
        android:layout_width="60dp"
        android:layout_height="46dp"
        android:background="#000000"
        android:scaleType="fitCenter"
        app:srcCompat="?attr/homeAsUpIndicator"
        app:tint="#FFFFFF" />

    <TextView
        android:id="@+id/friendlistTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/friendListView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:layout_toRightOf="@id/friendlistCancelButton"
        android:background="@color/black"
        android:backgroundTint="@color/black"
        android:text="Friends"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="32dp" />

</RelativeLayout>